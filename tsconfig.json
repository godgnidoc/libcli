{
    "include": ["node/src"],
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "removeComments": false,
        "module": "CommonJS",
        "target": "ES6",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "types",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "build/node",
    }
}